<!doctype html>
<html lang="{{ defaultLanguage }}" dir="ltr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width">

        <title>{% if title %} {{ title }} | {{ site.title }} {% else %} {{ site.title }} {% endif %}</title>

        {% include "partials/global/stylesheets.njk" %}

        {% include "partials/global/meta.njk" %}
        <link rel="alternate" type="application/atom+xml" href="{{ config.url }}/feed.xml" title="{{ site.name }} RSS feed">

        {% include "partials/global/icons.njk" %}
        <link rel="manifest" href="/manifest.webmanifest">

        {% include "partials/global/scripts.njk" %}
    </head>
    <body class="{{ bodyClass if bodyClass else "page" }}">
        {% uioTemplate %}
        {% include "partials/global/header.njk" %}
        <main>
            <article>
                <nav class="[ flc-toc-tocContainer ] [ wrapper ]"></nav>
                <header class="[ header ]{% if headerBg %} [ bg bg--{{ headerBg }} ]{% endif %}{% if headerText %} [ text--{{ headerText }} ]{% endif %}">
                    <div class="[ wrapper ]">
                        {% block pageHeader %}
                            <h1>{{ title }}</h1>
                            {% if subtitle %}
                            <p class="[ subtitle ] [ prose ]">{{ subtitle | safe }}</p>
                            {% endif %}
                            {% if page.url === "/" %}
                            <p class="[ sm:center ]"><a class="call-to-action" rel="external" href="https://create.weavly.org">Create</a></p>
                            {% endif %}
                        {% endblock %}
                    </div>
                </header>
                <div class="[ content ]">
                    {% block content %}
                    {{ content | safe }}
                    {% endblock %}
                </div>
            </article>
        </main>
        {% include "partials/global/footer.njk" %}
        {% uioInit %}
    </body>
</html>
